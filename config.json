{
  "name": "Pipeline-Executer",
  "viewName": "Kaholo Pipeline Executer",
  "type": "executer",
  "exposeRoute": false,
  "execProgram": "node",
  "main": "app.js",
  "version": "1.1.1",
  "imgUrl": "logo.png",
  "description": "Used to Trigger Kaholo Pipelines from Other Kaholo Pipelines",
  "category": "CI/CD",
  "keywords": [
    "executer",
    "pipeline",
    "trigger",
    "kaholo"
  ],
  "settings": [
    {
      "name": "TOKEN",
      "viewName": "Token",
      "description": "The authentication token of the user to run this pipeline.",
      "type": "vault"
    }
  ],
  "methods": [
    {
      "name": "executePipeline",
      "viewName": "Execute Pipeline",
      "params": [
        {
          "name": "TOKEN",
          "viewName": "Token",
          "description": "The authentication token of the user to run this pipeline.",
          "type": "vault"
        },
        {
          "name": "pipeline",
          "viewName": "Pipeline",
          "description": "Name of the pipeline to execute.",
          "placeholder": "pipeline_name_1",
          "learnUrl": "https://kaholo.io/documentation/managing-the-pipeline-flow/",
          "type": "autocomplete",
          "model": "Map",
          "propertyName": "name",
          "required": true
        },
        {
          "name": "CONFIG",
          "viewName": "Configuration",
          "description": "Name the configuration that the pipeline will run with.",
          "placeholder": "conf_1",
          "learnUrl": "https://kaholo.io/documentation/pipeline-tabs/configurations/",
          "type": "text"
        },
        {
          "name": "TRIGGER",
          "viewName": "Trigger Reason",
          "description": "Describe a reason for triggering the execution.",
          "placeholder": "Triggered by 'Trigger Reason'...",
          "learnUrl": "https://kaholo.io/documentation/advanced-ways-of-executing-a-kaholo-pipeline/executing-a-kaholo-pipeline/",
          "type": "text",
          "default": "Started by Pipeline-Executer plugin"
        },
        {
          "name": "executionInputs",
          "viewName": "Execution Inputs",
          "description": "Pass key-value pair as Kaholo Execution Inputs.",
          "placeholder": "DEV=true\nMSG=Hello world!",
          "type": "text"
        },
        {
          "name": "waitUntilPipelineEnds",
          "viewName": "Wait Until Pipeline Ends",
          "description": "Wait for the executed pipeline to finish.",
          "type": "boolean"
        }
      ]
    }
  ]
}